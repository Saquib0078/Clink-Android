<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/checkbox_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Change to your desired color -->
            <corners android:radius="5dp" /> <!-- Optional: adjust corner radius -->
        </shape>
    </item>
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Change to your desired color -->
            <stroke
                android:width="1dp"
            android:color="@color/black" />
            <corners android:radius="5dp" /> <!-- Optional: adjust corner radius -->
        </shape>
    </item>
</selector>
