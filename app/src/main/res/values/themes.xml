    <style name="Base.Theme.CLink" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Theme.CLink" parent="Base.Theme.CLink" />

    <style name="alertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_rounded_corner</item>
